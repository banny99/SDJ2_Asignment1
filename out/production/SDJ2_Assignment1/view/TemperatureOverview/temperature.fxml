<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="232.0" prefWidth="578.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.TemperatureOverview.TemperatureViewController">
   <children>
      <VBox layoutY="-2.0" prefHeight="400.0" prefWidth="600.0">
         <children>
            <Label prefHeight="30.0" prefWidth="600.0" text="Temperature Overview">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </Label>
            <HBox prefHeight="0.0" prefWidth="600.0">
               <children>
                  <Label alignment="CENTER" prefHeight="27.0" prefWidth="29.0" text="MIN: ">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="tf_min" prefHeight="20.0" prefWidth="40.0" />
                  <Label alignment="CENTER" prefHeight="27.0" prefWidth="32.0" text="MAX: ">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="tf_max" prefHeight="20.0" prefWidth="40.0" />
                  <Button fx:id="btn_submit" mnemonicParsing="false" onAction="#submitButtonPressed" text="Submit">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
            <HBox prefHeight="0.0" prefWidth="600.0">
               <children>
                  <Label text="Heater power state: " />
                  <Label fx:id="lb_powerState" text="0" />
               </children>
               <padding>
                  <Insets left="10.0" />
               </padding>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
            <Label fx:id="lb_temperature1" text="...">
               <VBox.margin>
                  <Insets left="10.0" top="20.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="lb_temperature2" text="...">
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="lb_temperature3" text="...">
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </Label>
            <Button mnemonicParsing="false" onAction="#manageHeaterButtonPressed" text="ManageHeater">
               <VBox.margin>
                  <Insets left="10.0" top="50.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="btn_showChart" mnemonicParsing="false" onAction="#showChartButtonPressed" text="Show Chart">
               <VBox.margin>
                  <Insets left="10.0" top="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
